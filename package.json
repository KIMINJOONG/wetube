{
	"name": "wetube",
	"version": "1.0.0",
	"description": "Cloning Youtube with Vanilla and NodeJS",
	"main": "index.js",
	"scripts": {
		"dev:server": "nodemon --exec babel-node init.js src/init.js --delay 2 --ignore 'scss' --ignore 'static' ",
		"dev:assets": "cd src && webpack -w --mode=development",
		"build:assets": "WEBPACK_ENV=production webpack --config src/webpack.config.js",
		"build:server": "babel src --out-dir build --ignore 'src/assets','src/static','src/webpack.config.js'",
		"prebuild": "rm -rf build",
		"build": "npm run build:server && npm run build:assets && cp -R src/static build && cp -R src/views build",
		"tunnel": "lt --port 4000",
		"start": "npm run build && PRODUCTION=true node build/init.js"
	},
	"author": "KIMINJOONG",
	"license": "ISC",
	"dependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.2.2",
		"@babel/node": "^7.2.2",
		"@babel/polyfill": "^7.2.5",
		"@babel/preset-env": "^7.3.1",
		"autoprefixer": "^9.4.7",
		"aws-sdk": "^2.404.0",
		"axios": "^0.18.0",
		"babel-loader": "^8.0.5",
		"body-parser": "^1.18.3",
		"connect-mongo": "^2.0.3",
		"cookie-parser": "^1.4.3",
		"css-loader": "^2.1.0",
		"dotenv": "^6.2.0",
		"express": "^4.16.4",
		"express-flash": "0.0.2",
		"express-session": "^1.15.6",
		"extract-text-webpack-plugin": "^4.0.0-beta.0",
		"get-blob-duration": "^1.0.1",
		"helmet": "^3.15.0",
		"mongoose": "^5.4.9",
		"morgan": "^1.9.1",
		"multer": "^1.4.1",
		"multer-s3": "^2.9.0",
		"node-sass": "^4.11.0",
		"passport": "^0.4.0",
		"passport-facebook": "^3.0.0",
		"passport-github": "^1.1.0",
		"passport-local": "^1.0.0",
		"passport-local-mongoose": "^5.0.1",
		"postcss-loader": "^3.0.0",
		"pug": "^2.0.3",
		"sass-loader": "^7.1.0",
		"webpack": "^4.29.1",
		"webpack-cli": "^3.2.3"
	},
	"devDependencies": {
		"nodemon": "^1.18.9"
	}
}
